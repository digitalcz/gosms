<?xml version="1.0"?>
<ruleset name="gosms">
    <description>The coding standard of register-adries package</description>
    <arg value="p" />

    <file>src</file>
    <file>tests</file>

    <config name="ignore_warnings_on_exit" value="1" />
    <config name="ignore_errors_on_exit" value="1" />

    <arg name="colors" />
    <arg value="s" />

    <rule ref="PSR12" />
    <rule ref="SlevomatCodingStandard.Namespaces.UnusedUses">
        <properties>
            <property name="searchAnnotations" value="true"/>
        </properties>
    </rule>
</ruleset>