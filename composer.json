{
  "name": "digitalcz/gosms",
  "type": "library",
  "description": "Provides communication with https://www.gosms.cz/api/ in PHP via PSR-18 http client",
  "keywords": [
    "digitalcz",
    "gosms",
    "go-sms",
    "php"
  ],
  "homepage": "https://github.com/digitalcz/gosms",
  "license": "MIT",
  "authors": [
    {
      "name": "Digital Solutions s.r.o.",
      "email": "devs@digital.cz",
      "homepage": "https://digital.cz",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "~7.2",
    "ext-json": "*",
    "nyholm/psr7": "^1.3",
    "php-http/discovery": "^1.7",
    "psr/http-client": "^1.0",
    "psr/http-message": "^1.0",
    "psr/simple-cache": "^1.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "v0.6",
    "php-http/mock-client": "^1.3",
    "phpstan/phpstan": "^0.12.25",
    "phpunit/phpunit": "^8.5",
    "slevomat/coding-standard": "^6.3",
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/var-dumper": "5.1.0"
  },
  "autoload": {
    "psr-4": {
      "DigitalCz\\GoSms\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DigitalCz\\GoSms\\": "tests"
    }
  },
  "scripts": {
    "tests": "phpunit",
    "phpstan": "phpstan analyse",
    "cs": "phpcs",
    "csfix": "phpcbf"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
